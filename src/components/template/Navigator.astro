---
import { Button } from "../commons/Button";
import { Switch } from "../commons/Switch";
import Menu from "../Menu.astro";

let enabled = true;
---

<header class="bg-white shadow-2xl m-5 rounded-3xl fixed inset-x-1 top-1">
  <nav aria-label="Global" class="mx-auto flex items-center justify-between p-6 lg:px-8">
    <div class="max-lg:hidden lg:flex lg:flex-1 ">
      <a href="#" class="-m-1.5 p-1.5">
        <h2 class='text-3xl font-bold text-terracotta-600'> &gt; SermarDev</h2>
      </a>
    </div>
    <div class="lg:hidden text-gray-900">
      <Button client:load color="transparent">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </Button>
    </div>
    <Menu/>
    <div class="lg:flex lg:flex-1 lg:justify-end">
      <Switch client:load checked={enabled} type='dark'/>
    </div>
  </nav>
</header>
